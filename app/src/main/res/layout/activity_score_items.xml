<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/box_bis">
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/match_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/team_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/match_picture"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Team Name  |  Team Name"
        android:textColor="@color/background"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/team_scores"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team_names"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="40  -  60"
        android:textColor="@color/text" />


</RelativeLayout>